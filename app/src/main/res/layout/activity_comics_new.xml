<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardp1"
                android:onClick="ghostrider"
                android:layout_width="340dp"
                android:layout_height="120dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="11dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#505049"
                app:cardCornerRadius="35dp"
                android:layout_margin="5dp"
                android:elevation="10dp">
                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="120dp"
                    android:background="@drawable/ghostridercolor"></LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ghost Rider"
                    android:layout_gravity="center"
                    android:layout_marginRight="50dp"
                    android:textColor="#fff"
                    android:textSize="24dp"></TextView>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cironman"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ghostrider"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/carddeadpool"
                android:onClick="deadpool"
                android:layout_width="340dp"
                android:layout_height="120dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="11dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#2C2929"
                app:cardCornerRadius="35dp"
                android:layout_margin="5dp"
                android:elevation="10dp">
                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="120dp"
                    android:background="@drawable/deadpoolcolor"></LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deadpool"
                    android:layout_gravity="center"
                    android:layout_marginRight="50dp"
                    android:textColor="#fff"
                    android:textSize="24dp"></TextView>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cdeadpool"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/deadpool"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardp2"
                android:onClick="ultron"
                android:layout_width="340dp"
                android:layout_height="120dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="11dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#2C2929"
                app:cardCornerRadius="35dp"
                android:layout_margin="5dp"
                android:elevation="10dp">
                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="120dp"
                    android:background="@drawable/ageofultroncolor"></LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age Of Ultron"
                    android:layout_gravity="center"
                    android:layout_marginRight="50dp"
                    android:textColor="#fff"
                    android:textSize="24dp"></TextView>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ageofultron"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ageofultronlogo"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>